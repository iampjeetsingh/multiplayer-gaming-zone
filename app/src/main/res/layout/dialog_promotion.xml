<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promote to"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/queen"
            android:layout_marginRight="10dp"
            android:src="@drawable/queen"
            />
        <ImageView
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/rook"
            android:layout_marginRight="10dp"
            android:src="@drawable/rook"
            />
        <ImageView
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bishop"
            android:layout_marginRight="10dp"
            android:src="@drawable/bishop"
            />
        <ImageView
            android:background="@color/grey"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/knight"
            android:src="@drawable/knight"
            />
    </LinearLayout>
</LinearLayout>